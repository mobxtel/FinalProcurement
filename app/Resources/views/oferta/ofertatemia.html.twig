                </a>
            </td>
        <td>
            <a href="{{ path('detaje_oferte', {'id': oferta.id}) }}">
            <button type="button" class="btn btn-info">Detaje</button></a>
        </td>
            <td>
                <a href="{{ path('fshiOferten', {'id': oferta.id})}}">
                <button type="button" class="btn btn-danger">Fshi
                </button></a>
            </td>


    {% else %}
        <tr>
            <td colspan="15">no records found</td>
        </tr>
    {% endfor %}

{% endblock %}