{% extends 'home.html.twig' %}
{% block bodymain %}
    <table class="table">
    <thead>
    <tr>
        <th>Pershkrim i tenderit</th>
        <th>Vlera e Fondit Limit</th>
        <th>Data e mbylljes se Tenderit</th>
        <th>Statusi i Tenderit</th>
        <th>Vendimi</th>
        <th>Modifiko</th>
        <th>Shiko Oferten</th>
        <th>Fshi Oferten</th>

    </tr>
    </thead>
    <tbody>
    {% for oferta in oferta %}
        <tr>

            <td>{{ oferta.titullTender }}</td>
            <td>{{ oferta.VleraOferte }}</td>
            <td>{{ oferta.dataMbylljeTender }}</td>
            <td>{{ oferta.statusTender }}</td>
            <td>{{ oferta.vendimi }}</td>
